ponder.com {
  log / /etc/logs/requests.log "{combined}"
  proxy / web:3000
}

www.ponder.com {
  log / /etc/logs/requests.log "{combined}"
  proxy / web:3000
}

server.ponder.com {
  log / /etc/logs/requests.log "{combined}"
  proxy / server:4000
}

goaccess.ponder.com {
  log / /etc/logs/requests.log "{combined}"
  root /site/goaccess
  gzip
}

goaccess.ponder.com:7890 {
 proxy / goaccess:7890 {
   websocket
 }
}